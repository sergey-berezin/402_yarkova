<Window x:Class="MyNuPackApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyNuPackApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="loadButton" Content="Загрузить текст" HorizontalAlignment="Left" VerticalAlignment="Top" Width="119" Height="30" Margin="33,25,0,0" Click="loadButton_Click"/>
        <TextBox x:Name="questionTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Height="20" Margin="0,313,0,0" TextChanged="questionTextBox_TextChanged"/>
        <Button x:Name="sendButton" Content="&lt;-- Ввести вопрос" HorizontalAlignment="Left" VerticalAlignment="Top" Width="116" Height="30" Margin="660,308,0,0" Click="sendButton_Click"/>
        <Button x:Name="cancelButton" Content="Отмена" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="30" Margin="678,356,0,0" Click="cancelButton_Click"/>
        <TextBox x:Name="chatTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,95,0,0" IsReadOnly="True" Height="198" Width="698" TextChanged="chatTextBox_TextChanged"/>

    </Grid>
</Window>
